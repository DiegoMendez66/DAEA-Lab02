<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="DarkCyan" CornerRadius="10" Margin="120,60,120,60" Background="Azure" BorderThickness="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Iniciar sesión" FontSize="25" FontWeight="Bold" Margin="0,20,0,20" FontFamily="comic sans" HorizontalAlignment="Center"></TextBlock>
                <Label Content="Nombre de Usuario:" FontSize="15"/>
                <TextBox Name="txtUsername" Width="300" Height="30" Background="AliceBlue" Margin="0,5,0,10"/>
                <Label Content="Contraseña:" FontSize="15"/>
                <PasswordBox Name="txtPassword" Width="300" Height="30" Margin="0,5,0,10" Background="AliceBlue"/>
                <Button Content="Iniciar Sesión" Click="Login_Click" Width="200" FontSize="20" FontWeight="Bold" Background="CadetBlue" Margin="0,15,0,10"/>
            </StackPanel>
        </Border>
       
    </Grid>
</Window>
